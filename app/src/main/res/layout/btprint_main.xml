<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    android:background="@android:color/darker_gray">

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="eXit" />
    <ScrollView android:id="@+id/ScrollView01"
        android:layout_width="fill_parent"
        android:layout_height="120dp"
        >
        <TextView
            android:textSize="14.0dip"
            android:textColor="#ff808080"
            android:id="@+id/log"
            android:background="#ff000000"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text=""
        />
    </ScrollView>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/remote_device"
        android:text="00:1A:7D:DA:71:0A"
        android:textAlignment="center"
        android:layout_column="0"
        android:background="@android:color/white"
        android:textAppearance="@android:style/TextAppearance.Large" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="@dimen/button_width"
            android:layout_height="wrap_content"
            android:text="@string/button_scan"
            android:id="@+id/button_scan"
            android:minWidth="180dp"
            android:layout_weight="0.5" />

        <Button
            android:layout_width="@dimen/button_width"
            android:layout_height="wrap_content"
            android:text="@string/button_connect_text"
            android:id="@+id/buttonConnect"
            android:minWidth="180dp"
            android:layout_gravity="right"
            android:layout_weight="0.5" />
    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="tap [select demo]"
        android:id="@+id/txtFileName"
        android:maxLines="1"
        android:background="@android:color/white" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">

        <Button
            android:layout_width="@dimen/button_width"
            android:layout_height="wrap_content"
            android:text="@string/button_select_file_text"
            android:id="@+id/btnSelectFile"
            android:minWidth="180dp"
            android:layout_weight="0.5" />

        <Button
            android:layout_width="@dimen/button_width"
            android:layout_height="wrap_content"
            android:text="@string/button_print_text"
            android:id="@+id/btnPrintFile"
            android:minWidth="180dp"
            android:layout_gravity="right"
            android:layout_weight="0.5" />
    </LinearLayout>
</LinearLayout>
